<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LienHe">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_below="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontStyle="normal"
                    android:fontWeight="700"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="CÔNG TY TNHH PHÁT TRIỂN PHẦN MỀM NHẤT TÂM"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <LinearLayout
                    android:id="@+id/ln1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/home"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/logincolor"
                        >
                    </ImageView>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ: "
                    android:textStyle="bold"
                    android:layout_below="@+id/home"

                    />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:text=" Số H25 Đường Phan Văn Đáng, Phường 8, Vĩnh Long"
                    />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/ln2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln1"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/email"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/logincolor"
                        >
                    </ImageView>
                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text2"
                        android:text="ntsoft@nhattamsoft.vn"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/ln3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln2"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/phone"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/logincolor"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotline: "
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(088) 8 558 567"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/ln4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln3"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/calendar"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/logincolor"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm việc: "
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Từ thứ 2 đến thứ 7, CN nghỉ"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/ln5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln4"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clock"
                        android:backgroundTint="@color/logincolor"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian: "
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:30 - 11:00;13:30 - 17:00"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/ln6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln5"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/laptop"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/logincolor"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website: "
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://nhattamsoft.vn/"
                        />
                </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl1"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E1A19D9D"/>
            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontStyle="normal"
                android:fontWeight="700"
                android:gravity="center"
                android:text="Hoặc liên hệ trực tiếp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:id="@+id/rl2_ln1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text6"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/headphone"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/logincolor"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng đài chăm sóc khách hàng: "
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl2_ln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2_ln1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0270) 6 287 064 - (093) 9 993062"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:id="@+id/rl2_ln3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2_ln2"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@drawable/handshake"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/logincolor"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bộ phận kinh doanh: "
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl2_ln4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2_ln3"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ntsoft@nhattamsoft.vn"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:id="@+id/rl2_ln5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2_ln4"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotline: (0270) 3 843 058"
                    />
            </LinearLayout>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl2"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E1A19D9D"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_below="@+id/rl3"
                android:gravity="bottom"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxHeight = "500dp"
                        android:text="© Bản quyền thuộc về Công ty TNHH Phát triển phần mềm Nhất Tâm - NTSoft"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>